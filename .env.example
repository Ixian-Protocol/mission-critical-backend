# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME="FastAPI Production Template"
VERSION="1.0.0"
DESCRIPTION="Production-ready FastAPI application with clean architecture"

# Environment
ENVIRONMENT="development"
DEBUG="True"

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app

# ntfy Notifications (optional - leave blank to disable)
NTFY_URL=http://ntfy:80
# NTFY_TOKEN=  # Optional: for authenticated ntfy servers
NTFY_TOPIC=ixian-mission-critical
